<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorClearGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/roboto_condensed_regular</item>
    </style>

    <style name="TextView.Header" parent="TextView">
        <item name="android:textColor">@color/colorClearGray</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/roboto_condensed_bold</item>
    </style>

    <style name="TextView.Title" parent="TextView">
        <item name="android:textColor">@color/colorClearGray</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/roboto_condensed_bold</item>
    </style>

    <style name="TextView.SubTitle" parent="TextView">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/roboto_condensed_light</item>
    </style>

</resources>
